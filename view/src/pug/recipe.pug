doctype html
html(lang=ja)
  head
    include template/_header
    title FactorioRecipe
    script(src='/js/recipe.js')
  body
    .container(role=main)
      table#recipe.table.table-condensed.table-striped
        thead
          tr
            th ID
            th 名前
            th 必要設備数
            th 必要数
        tbody
          tr(v-for='item in items')
            td {{ item.id }}
            td {{ item.name }}
            td {{ 0 }}
            td {{ item.amount }}
